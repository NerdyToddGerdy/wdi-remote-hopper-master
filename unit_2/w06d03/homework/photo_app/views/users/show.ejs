<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1><%=user.username%></h1>
    <a href="/">HOME</a>
    <br/>
    <a href="/users">Back to users</a>
    <br/>
    <a href="users/edit"></a>
    <form action="/users/<%=user.id%>?_method=DELETE" method="post">
      <input type="submit" value="Delete User">
    </form>
    <a href="/users/<%=user._id%>/edit">Edit</a>
    <h2>Here are <%=user.username%>'s photos</h2>
    <% for(var i = 0; i < user.photos.length; i++){ %>
      <li>
         <a href="/photos/<%=user.photos[i]._id%>"><img src="<%=user.photos[i].img%>" alt=""></a>
      </li>
   <% } %>
  </body>
</html>
